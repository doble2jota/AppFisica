<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.example.javier.appfisica.BotoneraMenu"
    android:id="@+id/h">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout2"></LinearLayout>

    <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="3dip"
    android:paddingRight="3dip"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:gravity="center"
    android:id="@+id/linearLayout3"
    android:weightSum="1">

    </LinearLayout>

    <Button
        android:layout_width="260dp"
        android:layout_height="107dp"
        android:id="@+id/bcircuitos"
        android:drawableLeft="@drawable/bcircuitos"
        android:background="#FFFFFF"
        android:layout_below="@+id/bteoria"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="260dp"
        android:layout_height="107dp"
        android:id="@+id/bteoria"
        android:background="#FFFFFF"
        android:src="@drawable/bteoria"
        android:drawableLeft="@drawable/bteoria"

        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bienvenidos ACresolve"
        android:id="@+id/textView3"
        android:textColor="#669900"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <Button
        android:layout_width="260dp"
        android:layout_height="107dp"
        android:id="@+id/bacercade"
        android:drawableLeft="@drawable/bacercade"
        android:background="#FFFFFF"
        android:layout_below="@+id/bcircuitos"
        android:layout_centerHorizontal="true" />

</RelativeLayout>